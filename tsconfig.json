{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "module": "commonjs",
    "target": "es5",
    "removeComments": true,
    "noUnusedLocals": true,
    "lib": ["ES2015"],
    "outDir": "./lib"
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/__test__/*"]
}
